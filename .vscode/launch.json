    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run test",
            "name": "Run tests",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node-terminal",
            "name": "Next.js: run dev",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Next.js: debug in Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true
        },
    ]
}