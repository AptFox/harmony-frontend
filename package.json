{
  "name": "harmony-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "generate:favicon": "png-to-ico ./src/assets/icon.png > ./public/favicon.ico",
    "docker:build": "docker build -f Dockerfile --build-arg NEXT_PUBLIC_API_URL=http://localhost:8080 --build-arg NODE_ENV=development -t harmony-frontend .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t harmony-frontend-dev .",
    "docker:run": "docker run --env-file .env.local --name harmony-frontend --rm -p 3000:3000 -e PORT=3000 harmony-frontend:latest",
    "docker:run:dev": "docker run --env-file .env.local --name harmony-frontend-dev --rm -p 3000:3000 -e PORT=3000 harmony-frontend-dev:latest",
    "docker:dev": "npm run docker:build:dev && npm run docker:run:dev",
    "docker:start": "npm run docker:build && npm run docker:run",
    "lint:fix": "eslint src --fix --ext .js,.ts,.jsx,.tsx",
    "lint:check": "eslint src --ext .js,.ts,.jsx,.tsx",
    "format:fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "format:check": "prettier \"**/*.{js,jsx,ts,tsx}\"",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@radix-ui/react-toast": "^1.2.11",
    "@sentry/nextjs": "^10.10.0",
    "add": "^2.0.6",
    "alert": "^6.0.2",
    "axios": "^1.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.501.0",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "shadcn": "^2.4.1",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-testing-library": "^7.6.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "png-to-ico": "3.0.1",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
